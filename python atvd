#sistema de login

def sistema_login():

    correct_username = "usuario"
    correct_password = "senha"
    attempts = 0
    max_attempts = 3

    while attempts < max_attempts:
        username = input("Digite seu nome de usuário: ")
        password = input("Digite sua senha: ")

        if username == correct_username and password == correct_password:
            print("Login bem-sucedido!")
            return
        else:
            attempts += 1
            remaining_attempts = max_attempts - attempts
            if remaining_attempts > 0:
                print(f"Nome de usuário ou senha incorretos. Tentativas restantes: {remaining_attempts}")
            else:
                print("Número máximo de tentativas excedido. Acesso negado.")

#login_system()



numero = float(input("Digite um número: "))

if numero > 0:
    print("Número positivo")
elif numero == 0:
    print("Número neutro")
else:
    print("Número negativo")

nota = -1

while nota < 0 or nota > 10:
    try:
        nota = float(input("Digite uma nota entre zero e dez: "))
        if nota < 0 or nota > 10:
            print("Valor inválido. Por favor, digite uma nota entre zero e dez.")
    except ValueError:
        print("Entrada inválida. Por favor, digite um número.")

print(f"Nota válida inserida: {nota}")



# Validação do nome
nome = ""
while len(nome) <= 3:
    nome = input("Digite seu nome (maior que 3 caracteres): ")
    if len(nome) <= 3:
        print("Nome inválido. O nome deve ter mais de 3 caracteres.")

# Validação da idade
idade = -1
while idade < 0 or idade > 150:
    try:
        idade = int(input("Digite sua idade (entre 0 e 150): "))
        if idade < 0 or idade > 150:
            print("Idade inválida. A idade deve estar entre 0 e 150.")
    except ValueError:
        print("Entrada inválida. Por favor, digite um número inteiro para a idade.")

# Validação do salário
salario = -1
while salario < 0:
    try:
        salario = float(input("Digite seu salário (não negativo): "))
        if salario < 0:
            print("Salário inválido. O salário não pode ser negativo.")
    except ValueError:
        print("Entrada inválida. Por favor, digite um número para o salário.")

print("\nInformações válidas inseridas:")
print(f"Nome: {nome}")
print(f"Idade: {idade}")
print(f"Salário: {salario}")



frase = input("Digite uma frase: ")

# Verifica se a frase contém apenas letras
if frase.isalpha():
    frase_invertida = frase.swapcase()
    print(f"Frase com caixa invertida: {frase_invertida}")
else:
    print("A frase deve conter apenas letras.")



frase = input("Digite uma frase: ")
palavra_antiga = input("Digite a palavra que deseja substituir: ")
palavra_nova = input("Digite a nova palavra: ")

nova_frase = frase.replace(palavra_antiga, palavra_nova)

print(f"Frase original: {frase}")
print(f"Frase modificada: {nova_frase}")

frase = input("Digite uma frase: ")

if frase.startswith("olá") and frase.endswith("?"):
    print("A frase começa com 'olá' e termina com '?'.")
else:
    print("A frase não começa com 'olá' ou não termina com '?'.")

idade = int(input("Digite sua idade: "))

if idade >= 12:
    print("Você pode assistir ao filme")
else:
    print("Você não pode assistir ao filme")
